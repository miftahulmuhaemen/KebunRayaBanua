<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".LoginActivity.mainActivity.MainActivity">

        <ViewFlipper android:id="@+id/viewFlipperMain"
                     android:autoStart="true"
                     android:inAnimation="@anim/fui_slide_in_right"
                     android:outAnimation="@anim/fui_slide_out_left"
                     android:background="@color/colorPrimary"
                     android:flipInterval="2000" android:layout_width="match_parent" android:layout_height="200dp"/>

        <RelativeLayout android:layout_marginTop="32dp" android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:paddingEnd="64dp" android:paddingLeft="64dp">

            <ImageView android:scaleType="center" android:id="@+id/scan" android:src="@drawable/scan" android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_alignParentStart="true"/>
            <ImageView android:scaleType="center" android:id="@+id/location" android:src="@drawable/lokasi" android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_centerInParent="true"/>
            <ImageView android:scaleType="center" android:id="@+id/database" android:src="@drawable/database" android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout android:layout_marginTop="20dp" android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:paddingEnd="64dp" android:paddingLeft="64dp">

            <ImageView android:scaleType="center" android:id="@+id/event" android:src="@drawable/event" android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_alignParentStart="true"/>
            <ImageView android:scaleType="center" android:id="@+id/notification" android:src="@drawable/notif" android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_centerInParent="true"/>
            <ImageView android:scaleType="center" android:id="@+id/logout" android:src="@drawable/logout" android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <TextView android:layout_marginTop="32dp" android:textSize="18sp" android:layout_marginLeft="32dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="Highlight" />

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recylerviewMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem="@layout/activity_main_highlight_item"
        />

    </LinearLayout>

</ScrollView>