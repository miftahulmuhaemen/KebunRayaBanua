<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/box_item" android:layout_width="300dp"
        android:layout_height="200dp"
android:layout_marginEnd="8dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/img_item" android:layout_width="match_parent" android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        <TextView
                android:id="@+id/title_item"
                android:layout_width="match_parent" android:layout_height="60dp"
                android:text="Ditemukan fakta mengejutan bahwa bunga aselole sedang berkembang biak"
                android:textSize="20sp" android:ellipsize="end" android:lines="1"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimaryDarkTransparent"
                android:gravity="left"
                android:padding="16dp"
                android:layout_alignParentBottom="true"
        />
    </RelativeLayout>

</android.support.v7.widget.CardView>